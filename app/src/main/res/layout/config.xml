<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dark style"
            android:onClick="setDarkStyle"
            android:id="@+id/btnDark"
            android:layout_weight="1"
            style="@style/Theme.AppCompat"
            android:background="#ff585759" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="light style"
            android:onClick="setLightStyle"
            android:id="@+id/btnLight"
            android:layout_weight="1"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Light"
            style="@style/Theme.AppCompat.Light"
            android:background="#fff4f4f4"
            android:textColor="#ff6b6a6b" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Text Quote"
            android:id="@+id/tvQute"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textColor="#ff3882a3"
            android:textSize="20sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvSourseOpen"
            android:gravity="left"
            android:background="#ff3882a3"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:textColor="#ffe7e7e7" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_weight="3">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/ok"
            android:layout_gravity="center"
            android:textColor="#ff3882a3">
        </Button>
    </LinearLayout>


</LinearLayout>